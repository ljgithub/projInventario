<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="InventarioPU" transaction-type="RESOURCE_LOCAL">
    <non-jta-data-source>java:app/jndi_inventario</non-jta-data-source>
    <class>com.uisrael.inventarioproyecto.modelo.Entidades.Marca</class>
    <class>com.uisrael.inventarioproyecto.modelo.Entidades.Presentacion</class>
    <class>com.uisrael.inventarioproyecto.modelo.Entidades.Producto</class>
    <class>com.uisrael.inventarioproyecto.modelo.Entidades.Proveedor</class>
    <class>com.uisrael.inventarioproyecto.modelo.Entidades.Zona</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
       <property name="serverName" value="localhost"/>
        <property name="portNumber" value="5432"/>
        <property name="databaseName" value="InventarioPA"/>
        <property name="User" value="postgres"/>
        <property name="Password" value="1234"/>
        <property name="URL" value="jdbc:postgresql://localhost:5432/InventarioPA"/>
        <property name="driverClass" value="org.postgresql.Driver"/>
    </properties>
  </persistence-unit>  
</persistence>
